<div class="container-fluid">
  <h4 class="mt-4">Add New Item</h4>
  <br>
  {{> messages}}
  <br>
  <form id="productForm" action="/add_new_item" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label>Product Name</label>
      <input type="text" class="form-control w-50" id="pName" name="pName" placeholder="Enter product name" required>
    </div>
    <div class="form-group">
      <label>Product Description</label>
      <input type="text" class="form-control w-50" id="desc" name="desc" placeholder="Enter description" required>
    </div>
    <div class="form-group">
      <label>Product Category</label>
      <input type="text" class="form-control w-50" id="pCat" name="pCat" placeholder="Enter category" required>
    </div>
    <div class="form-group">
      <label>Price</label>
      <input type="number" step="any" class="form-control w-50" id="price" name="price" placeholder="Enter price" required>
    </div>
    <div class="form-group">
      <label for="exampleFormControlFile1">Upload Product Image</label>
      <input type="file" class="form-control-file" id="image" name="image" required>
    </div>
    <br>
    <button type="submit" id="productFormSubmit" class="btn btn-c-yellow">Submit</button>
  </form>
</div>