<div class="row">
  {{#each products}}
  <div class="col-lg-3 col-sm-6 text-center">
    <a href={{this.productDetailsLink}}>
      <img src={{this.img}} width="150px" height="150px">
      <p class="features-item-info">{{this.info}}</p>
      <p class="products-price">{{this.price}}</p>
    </a>
  </div>
  {{/each}}
</div>