<div class="payment-details">
  <!-- Detailed Description -->
  <div class="card detailed-description mt-4 p-3">
    <dt>These are our details, please pay here and await updates on your purchase.</dt>
    <p class="mt-4">
      Bank: Legitimate Bank of the Philippines <br>
      Account Number: 0123456789
    </p>
  </div>

  <!-- Link to Purchase Details -->
  <div class="row mt-3 mb-5 text-center">
    <div class="col">
      {{#if purchaseId}}
        <h4 class="mb-4">Go to Your Purchase</h4>
        <a class="btn btn-c-pink" href="/purchase_details/{{purchaseId}}">Your Purchase</a>
      {{else}}
        <h5 class="mb-4">Your purchase failed, please try again.</h5>
        <a class="btn btn-c-pink" href="/cart">Go to Cart</a>
      {{/if}}
    </div>
    
  </div>

</div>