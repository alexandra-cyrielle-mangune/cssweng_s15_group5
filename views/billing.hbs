<section id="features">
  <div class="container">
    <br><br>
    <h4>{{title}}</h4>
    <hr>
    {{#if products}}
      <form class="form-div mt-5" action="/billing" method="POST">
        <div class="row justify-content-between">
          <div class="col-7">
            <div class="row p-4 rounded-25 border border-dark">
              <div class="form-group w-100">
                <label for="input-shipping" class="mb-4"><strong>Shipping Address</strong></label>
                <textarea id="input-shipping" class="form-control" col="100" rows="10" id="shipping" name="shipping" placeholder="Edit shipping address"></textarea>
              </div>
            </div>
          </div>
          <div class="col-5 p-5">
            <table class="table table-sm table-borderless mb-4">
              {{#each products}}
                <tr>
                  <td colspan="2">{{this.pName}}</td>
                  <td class="text-right"><strong>Php {{this.subPrice}}</strong></td>
                </tr>
              {{/each}}
              <tr>
                <td colspan="3"><hr></td>
              </tr>
              <tr>
                <th scope="row" colspan="2">Total:</th>
                <td class="text-right"><strong>Php {{total}}</strong></td>
              </tr>
            </table>
          </div>
        </div>
        <div class="row justify-content-between mt-5 mb-4">
          <div class="col-7">
            <div class="row p-4 rounded-25 border border-dark">
              <div class="form-group w-100">
                <label for="input-billing" class="mb-4"><strong>Billing Address</strong></label>
                <textarea id="input-billing" class="form-control" col="100" rows="10" id="billing" name="billing" placeholder="Edit billing address"></textarea>
              </div>
            </div>
          </div>
          <div class="col-4 p-3">
            <div class="row mb-3">
              <div class="form-group w-100">
                {{!-- <label for="transactionType">Mode of Transaction</label>
                <select class="form-control" id="transactionType" name="transactionType">
                  <option>CoD</option>
                  <option>Online</option>
                  <option>Bank Transfer</option>
                </select> --}}
                <h5 class="mb-3"><strong>Mode of Payment</strong></h5>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="transactionType" id="tType1" value="CoD">
                  <label class="form-check-label" for="tType1">Cash on Delivery</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="transactionType" id="tType2" value="Online">
                  <label class="form-check-label" for="tType2">Online Payment</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="transactionType" id="tType3" value="Bank Transfer">
                  <label class="form-check-label" for="tType3">Bank Transfer</label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-4">
                <a herf="/cart" class="btn btn-c-yellow">Cart</a>
              </div>
              <div class="col-7 text-center">
                <button type="submit" class="btn btn-c-pink">Confirm Transaction</button>
              </div>
            </div>    
          </div>
        </div>
      </form>
    {{else}}
      <h4 class="mb-5">No items in the cart! Please add some items from the catalogue.</h4>
    {{/if}}
  </div>
</section>