<div class="row">
  {{#each products}}
  <div class="col-lg-3 col-sm-6 mb-3">
    <a href={{this.productDetailsLink}}>
      <img src={{this.img}} width="250px" height="250px">
      <p class="features-item-info pt-2">{{this.info}}</p>
      <p>{{this.price}}</p>
    </a>
  </div>
  {{/each}}
</div>